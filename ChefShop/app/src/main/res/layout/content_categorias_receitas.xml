<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CategoriasReceitasActivity"
    android:padding="8dp"
    android:orientation="vertical"
    tools:showIn="@layout/activity_categorias_receitas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorias"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carnes"
        android:id="@+id/bCategoriaCarnes"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Massas"
        android:id="@+id/bCategoriaMassas"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saladas"
        android:id="@+id/bCategoriaSaladas"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sobremesas"
        android:id="@+id/bCategoriaSobremesas"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sopas"
        android:id="@+id/bCategoriaSopas"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lanches"
        android:id="@+id/bCategoriaLanches"/>


</LinearLayout>