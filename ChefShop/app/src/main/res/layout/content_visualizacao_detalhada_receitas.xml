<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".VisualizacaoDetalhadaReceitas"
    android:padding="15dp"
    android:orientation="vertical"
    tools:showIn="@layout/activity_visualizacao_detalhada_receitas">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ivVisualizacaoDetalhadaReceitasImagem"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvVisualizacaoDetalhadaReceitasNome"
        android:text="Nome Receita"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Ingredientes:"
        android:id="@+id/tvVisualizacaoDetalhadaReceitasIngredientes"/>

    <!--alguma forma de mostrar na tela a lista de ingredientes-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Modo de preparo:"
        android:id="@+id/tvVisualizacaoDetalhadaReceitasModoPreparo"/>

</LinearLayout>